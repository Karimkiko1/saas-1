# Database Configuration - Vercel Postgres
# Get your POSTGRES_URL from: https://vercel.com/docs/storage/vercel-postgres/quickstart
POSTGRES_URL=postgresql://default:password@your-vercel-postgres-host.vercel-storage.com:5432/verceldb

# Stripe Configuration
# Get these from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe Webhook Secret
# Run: stripe listen --print-secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application Configuration
BASE_URL=http://localhost:3000

# Authentication Secret
# Generate with: openssl rand -base64 32 (on macOS/Linux) or use a secure random string
AUTH_SECRET=your_random_auth_secret_here
